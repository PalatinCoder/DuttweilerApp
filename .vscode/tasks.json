{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "label": "Test: integration tests",
            "script": "test:integration",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "type": "npm",
            "label": "Test: unit tests",
            "script": "test:unit",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "type": "npm",
            "label": "Test: run all",
            "script": "test",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "label": "Dev server",
            "script": "start",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Dev: Mock API",
            "command": "node loader",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/mock-api"
            }
        },
        {
            "type": "shell",
            "label": "Build and Deploy [!]",
            "command": "npm run build:firebase ; firebase deploy",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "type": "npm",
            "label": "Build",
            "script": "build:static",
            "problemMatcher": []
        }
    ]
}
